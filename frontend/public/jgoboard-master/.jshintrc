{
    "bitwise": true, // we can live without bitwise ops
    "camelcase": true, // we like camelcase
    "curly": false, // let ifs be free
    "eqeqeq": false, // === everywhere is just silly
    "forin": true, // be safe with for...in
    "freeze": false, // we want to have Array.each
    "immed": true, // no immediate function invokations without parenthesis
    "indent": 4,
    "latedef": true, // no use of variables before definition
    "newcap": true, // capitalized constructors
    "noarg": true, // no arguments.caller/callee
    "noempty": true, // no empty blocks
    "nonew": true, // no new without assignment
    "quotmark": "single", // single quotes
    "undef": true, // don't allow use of undefined values
    "unused": true, // warn about unused variables
    "strict": true, // strict mode
    "trailing": true, // we hate trailing whitespace
    "node": true, // understand Node.js require, exports and module globals
    "browser": false // Few globals defined on per-access basis
}
